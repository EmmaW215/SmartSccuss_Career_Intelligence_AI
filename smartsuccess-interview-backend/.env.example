# ==============================================================
# SmartSuccess Interview Backend - Environment Variables
# Copy this file to .env and fill in your actual API keys
# cp .env.example .env
# ==============================================================

# Environment
ENVIRONMENT=development
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ==============================================================
# AI Service Keys (Migration Guide: Pre-Flight Checklist)
# ==============================================================

# REQUIRED - Gemini API Key (Free tier: 1500 requests/day)
# Get your key at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# RECOMMENDED - Groq API Key (Free tier: 14400 requests/day)
# Get your key at: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# OPTIONAL - OpenAI API Key (Paid fallback only)
OPENAI_API_KEY=your_openai_api_key_here

# ==============================================================
# Cost Optimization (Interview Agents v2)
# ==============================================================

# REQUIRED - Set to true to enable Gemini-first fallback chain
COST_OPTIMIZED_MODE=true

# OPTIONAL - Session data directory (defaults to data/sessions)
# SESSION_DATA_DIR=data/sessions

# ==============================================================
# LLM Configuration
# ==============================================================
LLM_PROVIDER=auto
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1024

# Gemini Models
GEMINI_MODEL_PRIMARY=gemini-2.0-flash-exp
GEMINI_MODEL_FALLBACK=gemini-1.5-flash

# ==============================================================
# GPU Server (Optional - for voice processing)
# ==============================================================
# GPU_SERVER_URL=http://your-gpu-server:8080
# GPU_SERVER_TIMEOUT=30
# USE_GPU_VOICE=false

# ==============================================================
# Voice Configuration
# ==============================================================
WHISPER_MODEL=whisper-1
TTS_MODEL=tts-1
TTS_VOICE=alloy
EDGE_TTS_VOICE=en-US-AriaNeural

# ==============================================================
# Interview Configuration
# ==============================================================
SCREENING_MAX_QUESTIONS=5
SCREENING_DURATION_MINUTES=15
BEHAVIORAL_MAX_QUESTIONS=6
BEHAVIORAL_DURATION_MINUTES=30
TECHNICAL_MAX_QUESTIONS=8
TECHNICAL_DURATION_MINUTES=45
